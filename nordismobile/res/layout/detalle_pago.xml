<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
   
    >
    
      <TableRow 
        android:padding="2dip" 
        android:layout_gravity="right"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" >
        
        <TextView 
            android:layout_width="0dp"
             android:layout_marginLeft="3dp"
            android:text="Forma de Pago:" 
            android:textSize="10dp" 
            android:scrollHorizontally="true"  
            android:textColor="@color/Teal" 
            android:layout_weight="0.25" 
            android:layout_height="wrap_content" />
        <TextView 
			android:layout_width="0dp"
            android:id="@+id/cxctextv_forma_pago" 
            android:scrollHorizontally="true" 
            android:textColor="@color/Black" 
            android:textSize="10dp" 
            android:layout_weight="0.25"  
            android:lines="1"
            android:layout_height="wrap_content" />
        <TextView 
            android:layout_width="0dp"
            android:text="Moneda :"  
            android:textSize="10dp"  
            android:textColor="@color/Teal" 
            android:layout_weight="0.15" 
            android:layout_height="wrap_content" />
        <TextView 
			android:layout_width="0dp"
            android:id="@+id/cxctextv_moneda" 
            android:scrollHorizontally="true" 
            android:textColor="@color/Black" 
            android:textSize="10dp" 
             android:lines="1"
            android:layout_weight="0.35" 
            android:layout_height="wrap_content" />
    </TableRow>
 
    <TableRow
         android:padding="2dip"   
        android:layout_gravity="right"   
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <TextView 
            android:layout_width="0dp"
			 android:layout_marginLeft="3dp"
            android:text="Monto :" 
            android:textSize="10dp"  
            android:textColor="@color/Teal" 
            android:layout_weight="0.25" 
            android:layout_height="wrap_content" />
        <TextView 
            android:layout_width="0dp"
            android:id="@+id/cxctext_monto" 
            android:scrollHorizontally="true" 
            android:textColor="@color/Black" 
            android:textSize="10dp" 
            android:layout_weight="0.75" 
             android:lines="1"
            android:layout_height="wrap_content" />
    </TableRow>
 
    <TableRow  
        android:padding="2dip" 
        android:layout_gravity="right"     
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        
        <TextView 
         android:layout_width="0dp"
		 android:layout_marginLeft="3dp"
         android:text="Monto Nacional :" 
         android:textSize="10dp"  
         android:textColor="@color/Teal" 
         android:layout_weight="0.25" 
         android:layout_height="wrap_content" />
        <TextView 
		 android:layout_width="0dp"
         android:id="@+id/cxctext_monto_nacional" 
         android:scrollHorizontally="true" 
         android:lines="1"
         android:textColor="@color/Black" 
         android:textSize="10dp" 
         android:layout_weight="0.75" 
         android:layout_height="wrap_content" />
        
    </TableRow>

   <TableRow
        android:id="@+id/fila_footer"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:padding="2dip" >

<!--         <include -->
<!--             android:layout_width="match_parent" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_gravity="fill" -->
<!--             layout="@layout/footer_view" /> -->

		  <TextView 
	         android:layout_width="0dp"
			 android:layout_marginLeft="3dp"
	         android:text="Monto Total :" 
	         android:textSize="14dp"  
	         android:textColor="@color/Teal" 
	         android:layout_weight="0.25" 
	         android:layout_height="wrap_content" />
	    
		   <TextView 
			 android:layout_width="0dp"
	          android:id="@+id/footer_txt" 
	         android:scrollHorizontally="true" 
	         android:lines="1"
	         android:textColor="@color/Black" 
	         android:textSize="14dp" 
	         android:layout_weight="0.75" 
	         android:layout_height="wrap_content" />
		   


    </TableRow>

</TableLayout>