<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
     android:orientation="vertical">  
         
        <TableRow
            android:id="@+id/tableRow8"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp" 
            android:background="@color/TransParentLightBlue"
            >

            <TextView
                android:id="@+id/dpllbl_lote"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:text="Lote :"
                android:textColor="@color/Teal"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dpltext_lote"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/Black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dpllbl_fechavence"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Fecha Vence :"
                android:textColor="@color/Teal"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dpltext_fechavence"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/Black"
                android:textSize="10dp" />
        </TableRow>

        <TableRow
            android:id="@+id/tableRow9"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
             android:layout_marginLeft="10dp"
            android:layout_marginBottom="15dp"
            android:background="@color/TransParentLightBlue">

            <TextView
                android:id="@+id/dpllbl_cantdespachada"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Cant.Despachada :"
                android:textColor="@color/Teal"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dpltext_cantdespachada"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:lines="1"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:textColor="@color/Black"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dpllbl_cantdevolver"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="Cant.Devolver :"
                android:textColor="@color/Teal"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/dpltext_cantdevolver"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:textColor="@color/Black"
                android:layout_weight="1"
                android:textSize="10dp" />
        </TableRow>  
        
</LinearLayout>