<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/White"
    android:layout_marginBottom="10dp"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ap_heardercodigo"
            style="@style/StyleFontTexViewNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@drawable/style_textbox2"
            android:text="Código"
            android:textColor="@color/Blue"
            android:textStyle="bold" >
        </TextView>

        <TextView
            android:id="@+id/ap_hearderdescripcion"
            style="@style/StyleFontTexViewNormal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ap_heardercodigo"
            android:layout_weight="1.5"
            android:background="@drawable/style_textbox2"
            android:gravity="center_horizontal"
            android:text="Promoción"
            android:textColor="@color/Blue"
            android:textStyle="bold" >
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/data_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:choiceMode="singleChoice"
        android:divider="@color/DarkGray"
        android:dividerHeight="0.3sp"
        android:drawSelectorOnTop="false"
        android:fastScrollEnabled="true"
        android:listSelector="@drawable/statelist"
        android:scrollingCache="false" >
    </ListView>

    <TextView
        android:id="@+id/txtview_enty"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/txtclient_entymessage"
        android:textColor="@color/Black"
        android:textSize="12dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btnmenu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:visibility="gone" />

</LinearLayout>