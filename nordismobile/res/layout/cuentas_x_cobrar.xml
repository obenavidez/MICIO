<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/White"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/cctextv_header"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:text="Datos Generales"
            android:textColor="@color/DodgerBlue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <TableLayout
            android:id="@+id/tblInfoGeneral"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/cclbl_cliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cliente:"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/cctextv_detallecliente"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Detalle Cliente"                   
                    android:textColor="@color/DarkGray" />
                
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/cclbl_limitecredito"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limite Crédito :"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/cctextv_detallelimitecredito"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"  
                    android:hint="Limite Crédito"                  
                    android:textColor="@color/DarkGray" />

                <TextView
                    android:id="@+id/cclbl_saldo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    
                    android:text="Saldo :"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/cctextv_detallesaldo"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="Detalle Saldo"
                    android:textColor="@color/DarkGray" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/cclbl_disponible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                   
                    android:text="Disponible :"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/cctextv_detalledisponible"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"  
                    android:hint="Detalle Disponible"
                    android:textColor="@color/DarkGray" />
            </TableRow>
        </TableLayout>      

        <TextView
            android:id="@+id/cxctextv_header2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/DodgerBlue"
            android:textSize="14sp"
            android:textStyle="bold" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/Gray" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cxctextv_detalle_generico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:textColor="@color/Gray"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/cxcbtnfilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/filter_state" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ListView
                android:id="@+id/cxclvgeneric"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:choiceMode="singleChoice"
                android:divider="@color/DarkGray"
                android:dividerHeight="0.3sp"
                android:listSelector="@drawable/statelist"
                android:scrollingCache="false" >
            </ListView>

            <TextView
                android:id="@+id/cctxtview_enty"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/txtclient_entymessage"
                android:textColor="@color/Black"
                android:textSize="12dp"
                android:visibility="gone" />

            <ProgressBar
                android:id="@+id/cxcprogressbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>