<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/LightGrey"
    android:orientation="vertical" >  

        <TextView 
         	android:id="@+id/header"
			style="StyleFontTextViewActionBar"
			android:layout_width="fill_parent"
			android:layout_height="30dp"
			android:text="Nordis Mobile - Consulta de Tasas de Cambio"
			android:gravity="center"
			android:textColor="@color/White"
			android:background="@drawable/bg_actionbar29" 	             
      	    />

    
    
     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

          <TextView
            android:id="@+id/bnflbl_codigo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="0.5"
            android:text="Codigo"
            android:textColor="@color/Teal"
            android:textSize="12sp" />
          
        <TextView
            android:id="@+id/bnflbl_fecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
 
            android:layout_weight="0.5"
            android:text="Fecha"
            android:textColor="@color/Teal"
            android:textSize="12sp" />

       <TextView
           android:id="@+id/bnglbl_tasa"
           android:layout_width="0dp"
           android:layout_height="wrap_content"
           android:layout_weight="0.5"
           android:text="Tasa"
           android:textColor="@color/Teal"
           android:textSize="12sp" />
       
    </LinearLayout>

    <ListView
        android:id="@+id/bnflv_tasacambio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:choiceMode="singleChoice"
        android:divider="@color/Black"
        android:dividerHeight="0.3sp"
        android:listSelector="@drawable/statelist"
        android:scrollingCache="false">
    </ListView>

</LinearLayout>