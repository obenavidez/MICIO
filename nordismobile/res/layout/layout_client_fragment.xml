<android.support.v4.widget.DrawerLayout android:layout_height="match_parent" 
	android:layout_width="match_parent" android:id="@+id/drawer_layout" 
	xmlns:android="http://schemas.android.com/apk/res/android"> 
	 <LinearLayout 
	    android:layout_height="wrap_content" 
	    android:layout_width="fill_parent" 
	    android:id="@+id/llheader" 
	    android:orientation="vertical" 
	    android:background="@color/White"> 
	    <TextView android:layout_height="30dp" 
	        android:layout_width="fill_parent" 
	        android:id="@+id/ctextv_gridheader" 
	        android:background="@color/Gray" 
	        android:textColor="@color/White" 
	        android:text="@string/txtclient_tittle" 
	        android:gravity="center" 
	        style="StyleFontTextViewActionBar"/> 
	     <TextView android:layout_height="wrap_content" 
	         android:layout_width="fill_parent" 
	         android:id="@+id/ctxtview_enty" 
	         android:textColor="@color/Black" 
	         android:text="@string/txtclient_entymessage" 
	         android:gravity="center_horizontal" 
	         android:visibility="gone" 
	         android:textSize="12dp"/> 
	         
	    
	 </LinearLayout> 
	  <FrameLayout 
	     android:layout_height="match_parent" 
	     android:layout_width="match_parent"  
	     android:paddingTop="25dp"
	     android:id="@+id/fragment_container"/>
	 <!-- MenÃº Lateral -->
	 <ListView android:layout_height="match_parent" 
	     android:layout_width="240dp" 
	     android:id="@+id/left_drawer" 
	     android:background="#111" 
	     android:choiceMode="singleChoice" 
	     android:layout_gravity="start"/> 
</android.support.v4.widget.DrawerLayout>