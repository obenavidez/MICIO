<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/White"
    android:orientation="vertical" >

  <TextView 
	android:id="@+id/fctextv_header"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content" 
	android:text="@string/title_listaproducto" 
	android:textColor="@color/DodgerBlue" 
	android:textStyle="bold"
	android:textSize="13sp" 
    />
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

     <!-- Separador -->   
    <View
	   android:layout_width="fill_parent"
	    android:layout_height="1dp"
	    android:background="@color/Gray"/> 

    <ScrollView
    	 android:id="@+id/ScrollView01"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:scrollbars="horizontal|vertical">

        <HorizontalScrollView
            android:id="@+id/HorizontalScrollView01"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

            	<RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1">
                        <!-- PRIMERA FILA -->      
                        <TextView
                        android:id="@+id/lblproductproducto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/Black"
                        android:text="@string/view_product_producto" /> 

                        <TextView
                        android:id="@+id/txt_view_product_producto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/lblproductproducto"
                        android:isScrollContainer="true"
                        android:text="Producto"
                        android:textColor="@color/Blue" 
                        android:gravity="top"
                        />
                        <!-- Segunda FIlA -->

                        <TextView
                        android:id="@+id/lblproductproveedor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblproductproducto"
                        android:gravity="left"
                        android:textColor="@color/Black"
                        android:text="@string/view_product_proveedor" />

                        <TextView
                        android:id="@+id/txt_view_product_proveedor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblproductproducto"
                        android:layout_toRightOf="@+id/lblproductproveedor"
                        android:text="Producto"
                        android:textColor="@color/Blue"
                         />

                        <!-- Tercera FILA -->
                        <TextView
                        android:id="@+id/lblproductnombregenerico"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblproductproveedor"
                        android:gravity="left"
                        android:textColor="@color/Black"
                        android:text="@string/view_product_nombregenerico" />
                        
                        <TextView
                        android:id="@+id/txt_view_product_nombre_generico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblproductproveedor"
                        android:text="Nombre Generico"
                        android:layout_toRightOf="@+id/lblproductnombregenerico"
                        android:textColor="@color/Blue"
                        >
                        </TextView>

                         				    <!-- CUARTA FILA -->
                        <TextView
                        android:id="@+id/lblproductforma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_below="@+id/lblproductnombregenerico"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/Black"
                        android:text="@string/view_product_forma" />
                        
                        <TextView
                        android:id="@+id/txt_view_product_forma"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:isScrollContainer="true"
                        android:text="Forma"
                        android:layout_toRightOf="@+id/lblproductforma"
                        android:layout_below="@+id/lblproductnombregenerico"
                        android:textColor="@color/Blue" /> 
                        
 				</RelativeLayout>
 				<RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1">
					

                        
                	 <!-- Quinta fila -->

                        <TextView
                        android:id="@+id/lblproductaccion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:layout_marginRight="3dp"
                        android:textColor="@color/Black"
                        android:text="@string/view_product_accion"
                        />
                        
                        <TextView
                        android:id="@+id/txt_view_product_accion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/lblproductaccion"
                        android:text="Accion"
                        android:textColor="@color/Blue"/>
                        
                        <!-- Sexta fila -->
                        <TextView
                        android:id="@+id/lblproducttipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:textColor="@color/Black"
                        android:layout_below="@+id/lblproductaccion"
                        android:text="@string/view_product_tipo"
                        />
                        
                        <TextView
                        android:id="@+id/txt_view_product_tipo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/Blue"
                        android:layout_below="@+id/lblproductaccion"
                        android:text="Tipo Producto"
                        android:layout_toRightOf="@+id/lblproducttipo"
                        
                         />
                        
						<!-- -Septima FILA -->

                        <TextView
                        android:id="@+id/lblproductcategoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblproducttipo"
                        android:gravity="left"
                        android:textColor="@color/Black"
                        android:text="@string/view_product_categoria"
                        />


                        <TextView
                        android:id="@+id/txt_view_product_categoria"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblproducttipo"
                        android:layout_toRightOf="@+id/lblproductespeciales"
                        android:text="Categoria"
                        android:textColor="@color/Blue"
                         />

                        <!-- OCTAVA FILA -->

                        <TextView
                        android:id="@+id/lblproductespeciales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lblproductcategoria"
                        android:gravity="left"
                        android:textColor="@color/Black"
                        android:text="@string/view_product_especialidades"
                        
                        />


                        <TextView
                        android:id="@+id/txt_view_product_especiales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="5dip"
                        android:layout_below="@+id/lblproductcategoria"
                        android:layout_toRightOf="@+id/lblproductespeciales"
                        android:text="Productos Especiales"
                        android:textColor="@color/Blue"
                         />
                        

                </RelativeLayout>

            </LinearLayout>
        </HorizontalScrollView>    
    </ScrollView>

    <TextView 
		android:id="@+id/fctextv_header2"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="@string/notasproducto" 
		android:textColor="@color/DodgerBlue" 
		android:textStyle="bold"
		android:gravity="center"
		android:textSize="13sp"	
	/>
	<View
		android:layout_width="fill_parent"
		android:layout_height="1dp"
		android:background="@color/Gray"/> 

	<ListView
     android:id="@+id/fclvnotas"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:choiceMode="singleChoice"
     android:divider="@color/DarkGray"
     android:dividerHeight="0.3sp"
     android:listSelector="@drawable/statelist"
     android:scrollingCache="false" >
    </ListView>			    
    <TextView
		android:id="@+id/fctxtview_enty"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center_horizontal"
		android:text="@string/txtclient_entymessage"
		android:textColor="@color/Black"
		android:textSize="12sp"
		android:visibility="gone" 
    />
 </LinearLayout>
 </LinearLayout>